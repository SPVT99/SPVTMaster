@using SPVTMaster.Views.Manage
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="nav nav-pills nav-stacked">
    <li style="
    border: 3px solid orange;
    border-radius: 7px;
    margin-bottom: 6px;
    "class="@ManageNavPages.IndexNavClass(ViewContext)"><a  style="color:black" asp-action="Index">Profile</a></li>

    <li style="
    border: 3px solid orange;
    border-radius: 7px;
    margin-bottom: 6px;
    "class="@ManageNavPages.ChangePasswordNavClass(ViewContext)"><a style="color:black" asp-action="ChangePassword">Password</a></li>

    @if (hasExternalLogins)
    {
        <li class="@ManageNavPages.ExternalLoginsNavClass(ViewContext)"><a style="color:black" asp-action="ExternalLogins">External logins</a></li>
    }

    <li style="
    border: 3px solid orange;
    border-radius: 7px;
    "class="@ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)"><a style="color:black" asp-action="TwoFactorAuthentication">Two-factor authentication</a></li>
</ul>

<link rel="stylesheet" type="text/css" href="~/css/site.css"/>